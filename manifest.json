{
  "manifest_version": 3,
  "name": "AI Page Helper",
  "version": "1.0.0",
  "description": "Мгновенный AI на любой странице – выделил текст и спросил",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "commands": {
  "open-ai-helper": {
    "suggested_key": {
      "default": "Ctrl+Shift+H",
      "mac": "Command+Shift+H"
    },
    "description": "Открыть AI Page Helper на текущей странице"
  }
}
}